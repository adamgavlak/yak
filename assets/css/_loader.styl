@keyframes loader-animation {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}
/* :not(:required) hides this rule from IE9 and below */
.spinner:not(:required) {
  animation: loader-animation 1250ms infinite linear;
  border: 8px solid main-color;
  border-radius: 16px;
  box-sizing: border-box;
  display: inline-block;
  position: relative;
  text-indent: -9999px;
  width: 32px;
  height: 32px;

  &:after {
    content ' '
    display block
    z-index: -999
    width: 4px
    position relative
    left 6px
    top 5px
    height 20px
    margin 0
    background: white
  }
}

