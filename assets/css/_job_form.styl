.form-group
  display flex
  margin 1em 0

  label > span 
    position: relative
    top 0.15em
    left 0.2em

  input[type="text"]
    padding 0.3em
    border-radius 4px
    border 1px solid #bbb
    max-width: 400px
    width 100%
    font-weight: 400

    &.full-width
      max-width 100%

  .list--no-style
    margin 0

.form-group--column
  flex-flow: column

.form-group--vcenter
  display flex
  align-items: center

.control-label
  font-weight: 700
  min-width: 150px
  padding-top 0.25em

  &--padded
    padding: 0 0 0.4em
    display block

.tip
  color #bbb
  font-size 0.9em
  padding 0.4em 0 0

.control-label--company
  min-width: 200px

.btn-primary
  border 0
  font-family: "Proxima Nova Soft"

.full-width
  width 100%

form section
  margin-bottom 2.5em

.ql-toolbar
  border-top-left-radius: 4px
  border-top-right-radius: 4px
  font-family: "Proxima Nova Soft"

.ql-container
  font-family: "Proxima Nova Soft"
  min-height 8em
  font-size 0.9em
  border-bottom-left-radius: 4px
  border-bottom-right-radius: 4px

.ql-snow .ql-editor h2
  color main-color
  font-size 1.17em
  margin-bottom 0.4em

.ql-editor
  min-height 200px