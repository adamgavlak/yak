.motto
  font-size 1.2em
  font-weight 300
  line-height: 1.6
  color color-main
  margin: 0.7em 0 0.8em
  text-align: center
  transition width 0.5s ease-in-out

.column
  display flex

.job
  width 100%
  display flex
  align-items baseline
  flex-wrap wrap
  color #222
  padding 0 0 0.5em
  margin-top 0.3em

  &:hover &__title
    color color-main

  &--link
    display block
    border-bottom 1px solid lighten(color-gray, 25%)

    &:last-child
      border-bottom 0
  
  &__title
    width 100%
    font-weight 600
  
  &__info
    display flex
    width 100%
    justify-content space-between
    font-weight 400
    color darken(color-gray, 40%)
    margin-top 0.25em
    
  &__date
    color mix(color-gray, color-main, 60%)
    
  &--new
    margin-left: 3em
    position: relative

    &:before
      content: 'Nov√©'
      font-size: 0.65em
      position: absolute
      left -4.5em
      top 0.1em
      color #222
      background: #FFCC00
      padding 3px 6px 3px
      border-radius 4px
      font-weight: 800
      letter-spacing: 0.025em
      text-transform: uppercase
    
.category
  &__header
    color color-main
    margin 0.75em 0 0.4em
    text-align center
    letter-spacing: 0.04em
    
    &--home
      margin-bottom 1.1em
      
  &__job-count
    color darken(color-gray, 10%)
    white-space nowrap
    
  &__row
    flex-flow column
    margin-bottom 1.4em
    
@media (min-width 800px)
  .job
    flex-wrap nowrap
    
    &__title
      width auto
      white-space nowrap
      display flex
      // align-items flex-end
      
    &__company
      margin-left 0.4em
      
    &__meta
      flex-flow row
      
  .category
    &__header
      text-align left
      
    &__row
      flex-flow row
      align-items center
      margin-bottom 1.4em
      
  .motto
    font-size 1.8em
    margin: 1em 0 1.5em
    