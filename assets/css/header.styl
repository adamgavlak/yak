header
  background main-color
  color accent-color
  width 100%
  height 64px

nav
  max-width 960px
  margin 0 auto
  padding 0 10px
  height 100%
  display flex
  align-items center
  justify-content space-between

  a
    color white
    text-decoration: none

    &:hover
      text-decoration: underline

  h1
    margin 0
    display inline-block
    letter-spacing 1px
    font-size: 1.8em
    font-weight: 700

  ul
    display inline-block
    list-style none
    padding 0
    margin 0

    li 
      margin 0
      display inline
      padding-left 0.5em