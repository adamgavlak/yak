header
  background main-color
  color accent-color
  width 100%
  height 65px
  position fixed
  top 0
  left 0

nav
  max-width 48em
  margin 0 auto
  padding 0 0.9em
  height 100%
  display flex
  align-items center
  justify-content space-between

  .menu
    position absolute
    top 60px
    right -100%
    transition all 0.25s ease-in-out

    &--open
      right 0

  a
    color white
    text-decoration none

    &:hover
      text-decoration underline

  h1
    margin 0
    display inline-block
    letter-spacing 1px
    font-size 1.8em
    font-weight 700

  ul
    display flex
    flex-flow column
    list-style none
    padding 0.5em 0.9em 1em 1.8em
    margin 0
    background: main-color

    li
      margin 0
      padding 0.4em 0
      text-align right

  .mobile
    display flex
    line-height: 2

    span
      padding-right: 0.4em

@media (min-width: 425px) 
  header
    position relative
    height 65px

    .menu
      position relative
      display flex
      top auto
      right auto

    .mobile
      display none

    ul 
      flex-flow row
      background rgba(#000, 0)
      padding 0

      li
        padding-left 0.75em

    
