header
  background main-color
  color accent-color
  width 100%
  height 3em
  position fixed
  top 0
  left 0
  font-weight: 700

nav
  width 100%
  height 100%
  max-width 48em

  margin 0 auto
  padding 0 0.9em

  display flex
  align-items center
  justify-content space-between

  .logo
    a:hover
      text-decoration: none
    img
      height 2em

  .menu
    position absolute
    top 60px
    right -100%
    transition all 0.25s ease-in-out

    &--open
      right 0

  a
    color white
    text-decoration none
    font-weight: 700

    &:hover
      text-decoration underline

  h1
    margin 0 0 0 0.5em
    display inline-block
    letter-spacing 2px
    text-transform: uppercase
    font-size 1.2em
    font-weight 700

  ul
    display flex
    flex-flow column
    list-style none
    padding 0.5em 0.9em 0.5em 1.2em
    margin 0
    background: main-color

    ul
      padding 0

    li
      margin 0
      padding 0.4em 0
      text-align right

      hr
        border 1px solid rgba(#fff, 0.5)
        margin-bottom: 6px

  .mobile
    display flex
    line-height: 2

    span
      padding-right: 0.4em

@media (min-width: 600px) 
  header
    position relative
    height 65px

    .menu
      position relative
      display flex
      top auto
      right auto

    .mobile
      display none

    ul 
      flex-flow row
      background rgba(#000, 0)
      padding 0

      .navlist
        display none
        position absolute
        flex-flow column
        width auto
        right -1em
        top 2.8em
        border-radius 4px
        padding 0.6em 1em
        background #fff
        box-shadow 0 2px 10px rgba(#000, 0.4)
        transition display 2s 

        a
          color main-color

        li
          padding 0.4em 0

      li:hover
        cursor pointer
        text-decoration underline

      li:hover > .navlist
        display flex

      li
        padding 1em 0
        padding-left 0.75em
        height 100%
        display block



        hr
          display none
    
